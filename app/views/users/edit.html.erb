<h1>Edit User</h1>


<div class="container show">
  <div class="col-lg-10">
    <div class="panel panel-default">
      <div class="panel-heading">
      </div>
      <div class="panel-body single">
        <ul>

          <%= form_for @user do |form| %>


          <%= form.label :name %>
          <%= form.text_field :name %><br>

          <%= form.label :email %>
          <%= form.text_field :email %><br><br>

          <%= form.label :password %>
          <%= form.password_field :password %><br>

          <%= form.label :password_confirmation %>
          <%= form.password_field :password_confirmation %><br>

          <%= form.submit 'Edit your account' %>
          <% end %>
        </ul>
        <button>
          <%= link_to "DELETE your account", current_user, method: :delete, data: { confirm: "Are you sure you want to delete your account?"} %>
      </div>
    </div>
    <button><%= link_to "Go back to all Combos", combos_path %></button>
  </div>
</div>
