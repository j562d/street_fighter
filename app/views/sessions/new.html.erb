<h2>Log In</h2>

<div class="container show">
  <div class="col-lg-10">
    <div class="panel-body main">
      <ul>
      <div class="info">
        <ul>
        <div class="comment_form">

          <p id="alert"><%= alert %></p>
          <%= form_tag sessions_path do %>
          <div class="field">
            <%= label_tag :email %>
            <%= text_field_tag :email, params[:email] %>
          </div>
          <div class="field">
            <%= label_tag :password %>
            <%= password_field_tag :password %>
          </div>
          <div class="actions">
            <%= submit_tag "Log In" %>
          </div>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
